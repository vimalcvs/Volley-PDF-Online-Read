<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_relative"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?listChoiceBackgroundIndicator"
        android:layout_height="?listPreferredItemHeightLarge">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_icon"
            android:layout_width="?listPreferredItemHeightSmall"
            android:layout_height="?listPreferredItemHeightSmall"
            android:layout_centerVertical="true"
            android:layout_marginStart="?listPreferredItemPaddingStart"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"
            app:shapeAppearanceOverlay="@style/ShapeCornerCut" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="?listPreferredItemPaddingStart"
            android:layout_marginEnd="?listPreferredItemPaddingEnd"
            android:layout_toEndOf="@id/iv_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:singleLine="true"
                android:ellipsize="middle"
                android:textAppearance="?textAppearanceListItem" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:alpha="0.7"
                android:textAppearance="?textAppearanceListItemSecondary" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>